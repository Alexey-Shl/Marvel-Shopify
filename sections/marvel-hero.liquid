{{ 'marvel-page-hero.scss.css' | asset_url | stylesheet_tag }}

<script src="{{ 'marvel-scroll.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .hero-image {
      background-image: url("{{ section.settings.hero_image | image_url }}");
      width: 100%;
      height: 100vh;
      background-size: cover;
      background-position: top;
  }

  .hero-button-icon {
      display: block !important;
      background-image: url("{{ 'electric_fork.svg' | asset_url }}");
      width: 24px;
      height: 24px;
      background-repeat: no-repeat;
      background-size: contain;
      background-position: center;
    }
{%- endstyle -%}

<div id="Home" dark="{{ section.settings.hero_dark_mode }}">
  {% if section.settings.hero_image %}
    <div class="hero-image">
      <div class="hero-gradient">
        {% if section.settings.hero_title %}
          <div class="hero-title">
            {{ section.settings.hero_title }}
          </div>
        {% endif %}
        {% if section.settings.hero_description %}
          <div class="hero-description">
            {{ section.settings.hero_description }}
          </div>
        {% endif %}
        <a href="{{ section.settings.hero_contact_link }}" class="hero-contact-button">
          {{ section.settings.hero_contact_button }}
          <div class="hero-button-icon"></div>
        </a>
        <div class="hero-line"></div>
        <div class="hero-scroll-text">Scroll for more</div>
      </div>
    </div>
  {% else %}
    <div class="hero-gradient">
      {% if section.settings.hero_title %}
        <div class="hero-title">
          {{ section.settings.hero_title }}
        </div>
      {% endif %}
      {% if section.settings.hero_description %}
        <div class="hero-description">
          {{ section.settings.hero_description }}
        </div>
      {% endif %}
      <a href="{{ section.settings.hero_contact_link }}" class="hero-contact-button">
        {{ section.settings.hero_contact_button }}
        <div class="hero-button-icon"></div>
      </a>
      <div class="hero-line"></div>
      <div class="hero-scroll-text">Scroll for more</div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Marvel Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Title",
      "default": "Marvel Power Group"
    },
    {
      "type": "checkbox",
      "id": "hero_dark_mode",
      "label": "Scroll Menu Dark Mode",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "hero_description",
      "label": "Description",
      "default": "Marvel Power Group is a woman-owned, ESG-focused transaction broker and commercial advisor. We offer services to clients in power, gas, water, industrial and transportation sectors."
    },
    {
      "type": "text",
      "id": "hero_contact_link",
      "label": "Contact Button Link"
    },
    {
      "type": "text",
      "id": "hero_contact_button",
      "label": "Contact Button Text",
      "default": "Contact Us"
    }
  ]
}
{% endschema %}
