.scroll-menu-container {
  position: fixed;
  top: 50%;
  right: 0;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 10px;
  line-height: 14px;
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 24px;
  list-style-type: decimal-leading-zero;
  color: #0B0D21;
  z-index: 99999999;
}

.scroll-menu-white {
  color: #FFFFFF !important;
}

.scroll-menu-element {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  gap: 8px;
  width: fit-content;
  height: fit-content;
  align-self: flex-end;
}

.scroll-menu-element-line {
  display: block !important;
  width: 20px;
  height: 1px;
  background-color: #0B0D21;
}

.scroll-menu-line-active {
  display: block !important;
  width: 60px;
  height: 1px;
  background-color: #0B0D21;
}

.scroll-menu-line-white {
  background-color: #FFFFFF;
} 
