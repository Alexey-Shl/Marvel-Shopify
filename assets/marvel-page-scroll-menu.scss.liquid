$mobile-width: 320.98px;

.scroll-menu-container {
  position: fixed;
  top: 40%;
  right: 0;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 10px;
  line-height: 14px;
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 24px;
  list-style-type: decimal-leading-zero;
  color: #0B0D21;
  z-index: 99999999;
  counter-reset: num;

  @media screen and (max-width: $mobile-width) {
    display: none;
  }

  li {
    display: block;
  }
}

.scroll-menu-item {
  display: flex;
  align-items: center;
  gap: 2px;
  width: fit-content;
  height: 100%;
  color: #0B0D21;
  text-decoration: none;

  &:before {
    counter-increment: num;
    content: "0" counter(num);
  }

  &::after {
    display: block !important;
    content: '';
    width: 20px;
    height: 1px;
    margin-left: 6px;
    background-color: #0B0D21;
  }
}

.scroll-menu-item-active {
  &::after {
    width: 60px !important;
  }
}

.scroll-menu-item-white {
  color: #FFFFFF !important;

  &::after {
    background-color: #FFFFFF !important;
  }
}