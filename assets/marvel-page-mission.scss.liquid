.mission-container {
  width: 1110px;
  padding-top: 96px;
  padding-bottom: 96px;
  margin-left: auto;
  margin-right: auto;
}

.mission-content-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 54px;
}

.mission-title {
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 90px;
  line-height: 100px;
  color: #0B0D21;
}

.mission-separator-stripe {
  display: block !important;
  height: 6px;
  width: 100px;
  background: #F9D023;
  margin-top: 48px;
  margin-bottom: 56px;
}

.mission-text-container {
  width: 570px;
}

.mission-header {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 18px;
  line-height: 26px;
  color: #0B0D21;
  letter-spacing: 0;
}

.mission-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 26px;
  color: #0B0D21;
  white-space: pre-wrap;
  letter-spacing: 0;
}

.mission-points-container {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  gap: 30px;
  margin-top: 96px;
}

.mission-point {
  width: 198px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mission-point-icon {
  width: 72px;
  height: 72px;
  border-radius: 50%;
  background: #F9F9F9;
  display: block !important;
}

.mission-point-header {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 48px;
  line-height: 56px;
  text-align: center;
  color: #0B0D21;
}

.mission-point-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 18px;
  text-align: center;
  color: #0B0D21;
}
