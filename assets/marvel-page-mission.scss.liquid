$mobile-width: 320.98px;

.mission-container {
  width: 1110px;
  padding-top: 96px;
  padding-bottom: 96px;
  margin-left: auto;
  margin-right: auto;

  @media screen and (max-width: $mobile-width) {
    padding-left: 15px;
    padding-right: 15px;
    width: 100%;
    padding-top: 56px;
    padding-bottom: 56px;
  }
}

.mission-content-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 54px;

  @media screen and (max-width: $mobile-width) {
    flex-direction: column;
    gap: 32px;
  }
}

.mission-title {
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 90px;
  line-height: 100px;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 40px;
    line-height: 48px;
  }
}

.mission-separator-stripe {
  display: block !important;
  height: 6px;
  width: 100px;
  background: #F9D023;
  margin-top: 48px;
  margin-bottom: 56px;

  @media screen and (max-width: $mobile-width) {
    height: 4px;
    width: 65px;
    margin-top: 32px;
    margin-bottom: 40px;
  }
}

.mission-text-container {
  width: 570px;

  @media screen and (max-width: $mobile-width) {
    width: 100%;
  }
}

.mission-header {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 18px;
  line-height: 26px;
  color: #0B0D21;
  letter-spacing: 0;

  @media screen and (max-width: $mobile-width) {
    font-size: 14px;
    line-height: 24px;
  }
}

.mission-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 26px;
  color: #0B0D21;
  white-space: pre-wrap;
  letter-spacing: 0;

  @media screen and (max-width: $mobile-width) {
    font-size: 14px;
    line-height: 24px;
  }
}

.mission-points-container {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
  gap: 30px;
  margin-top: 96px;

  @media screen and (max-width: $mobile-width) {
    margin-top: 56px;
    flex-wrap: wrap;
    gap: 10px;
    row-gap: 40px;
  }
}

.mission-point {
  width: 198px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8px;
  @media screen and (max-width: $mobile-width) {
    max-width: 140px;
  }
}

.mission-point-icon {
  width: 72px;
  height: 72px;
  border-radius: 50%;
  background: #F9F9F9;
  display: flex !important;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;

  @media screen and (max-width: $mobile-width) {
    width: 56px;
    height: 56px;
  }
}

.mission-point-header {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 48px;
  line-height: 56px;
  text-align: center;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 32px;
    line-height: 40px;
  }
}

.mission-point-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 18px;
  text-align: center;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 12px;
    line-height: 16px;
    max-width: 140px;
  }
}