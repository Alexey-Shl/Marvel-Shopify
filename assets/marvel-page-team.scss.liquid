.team-container {
  width: 1110px;
  padding-top: 96px;
  padding-bottom: 96px;
  margin-left: auto;
  margin-right: auto;
}

.team-title {
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 90px;
  line-height: 100px;
  color: #0B0D21;
}

.team-separator-stripe {
  display: block !important;
  height: 6px;
  width: 100px;
  background: #F9D023;
  margin-top: 48px;
  margin-bottom: 56px;
}

.team-content-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 30px;
}

.team-meet-link {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 14px;
  line-height: 18px;
  color: #F9D023;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: fit-content;
  margin-bottom: 48px;
}

.team-card {
  width: 540px;
  background: #FFFFFF;
  box-shadow: 0px 0px 40px rgba(0, 13, 129, 0.08);
  border-radius: 0px 0px 0px 64px;
  position: relative;
  padding-top: 32px;
  padding-left: 64px;
  padding-bottom: 56px;
  padding-right: 64px;
  display: flex;
  flex-direction: column;
}

.team-card-image {
  position: absolute;
  top: 0;
  right: 0;
  width: 228px;
  height: 228px;
  background-repeat: no-repeat;
  background-size: cover;
  background-color: #F9F9F9;
  mix-blend-mode: multiply;
  border-radius: 0px 0px 0px 64px;
}

.team-card-name {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 40px;
  line-height: 48px;
  color: #0B0D21;
}

.team-card-position {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 18px;
  color: #0B0D21;
  margin-top: 16px;
}

.team-card-description {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 26px;
  color: #0B0D21;
  margin-top: 40px;
}

.team-card-title {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 24px;
  line-height: 32px;
  color: #0B0D21;
  margin-bottom: 8px;
}

.team-card-career {
  margin-top: 40px;
}

.team-card-education {
  margin-top: auto;
}

.team-card-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 26px;
  color: #0B0D21;

  ul {
    list-style-type: square;
    padding-left: 15px;
  }

  li::marker {
    color: #F9D023;
  }
}

.social-icons-container {
  position: absolute;
  bottom: 46.5px;
  right: 42px;
  display: flex;
  flex-direction: row;
  gap: 22px;
  width: fit-content;
  align-items: center;
  justify-content: center;
}