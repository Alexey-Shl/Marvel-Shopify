$mobile-width: 576.98px;

.team-container {
  width: 1110px;
  margin-top: -20px;
  padding-top: 116px;
  padding-bottom: 96px;
  margin-left: auto;
  margin-right: auto;

  @media screen and (max-width: 1350.98px) {
    padding-left: 50px;
    padding-right: 50px;
    width: 100%;
  }

  @media screen and (max-width: $mobile-width) {
    padding-left: 15px;
    padding-right: 15px;
    width: 100%;
    padding-top: 76px;
    padding-bottom: 56px;
  }
}

.team-title {
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 90px;
  line-height: 100px;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 40px;
    line-height: 48px;
  }
}

.team-separator-stripe {
  display: block !important;
  height: 6px;
  width: 100px;
  background: #F9D023;
  margin-top: 48px;
  margin-bottom: 56px;

  @media screen and (max-width: $mobile-width) {
    margin-top: 32px;
    margin-bottom: 40px;
    height: 4px;
    width: 65px;
  }
}

.team-content-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 30px;

  @media screen and (max-width: 1030.98px) {
    flex-direction: column;
  }

  @media screen and (max-width: $mobile-width) {
    gap: 32px;
  }
}

.team-card {
  width: 540px;
  background: #FFFFFF;
  box-shadow: 0px 0px 40px rgba(0, 13, 129, 0.08);
  border-radius: 0px 0px 0px 64px;
  position: relative;
  padding-top: 32px;
  padding-left: 64px;
  padding-bottom: 56px;
  padding-right: 64px;
  display: flex;
  flex-direction: column;

  @media screen and (max-width: 1030.98px) {
    width: 100%;
  }

  @media screen and (max-width: $mobile-width) {
    padding: 16px 24px 27px;
    width: 100%;
    border-radius: 0px 0px 0px 48px;
  }
}

.team-meet-link {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 14px;
  line-height: 18px;
  color: #F9D023;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: fit-content;
  margin-bottom: 48px;

  @media screen and (max-width: $mobile-width) {
    font-size: 12px;
    line-height: 16px;
    margin-bottom: 24px;
  }
}

.team-card-image {
  position: absolute;
  top: 0;
  right: 0;
  width: 228px;
  height: 228px;
  background-repeat: no-repeat;
  background-size: cover;
  background-color: #F9F9F9;
  mix-blend-mode: multiply;
  border-radius: 0px 0px 0px 64px;

  @media screen and (max-width: $mobile-width) {
    display: none;
  }
}

.team-card-image-mobile {
  display: none;
  position: absolute;
  top: 0;
  right: 0;
  width: 136px;
  height: 136px;
  background-repeat: no-repeat;
  background-size: cover;
  background-color: #F9F9F9;
  mix-blend-mode: multiply;
  border-radius: 0px 0px 0px 48px;

  @media screen and (max-width: $mobile-width) {
    display: block;
  }
}

.team-card-name {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 40px;
  line-height: 48px;
  color: #0B0D21;
  width: 248px;

  @media screen and (max-width: $mobile-width) {
    display: none;
  }
}

.team-card-name-mobile {
  display: none;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 22px;
  line-height: 28px;
  color: #0B0D21;
  width: 130px;

  @media screen and (max-width: $mobile-width) {
    display: block;
  }
}

.team-card-position {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 18px;
  color: #0B0D21;
  margin-top: 16px;
  width: 248px;

  @media screen and (max-width: $mobile-width) {
    font-size: 12px;
    line-height: 16px;
    margin-top: 8px;
    width: 116px;
  }
}

.team-card-description {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 26px;
  color: #0B0D21;
  margin-top: 40px;

  @media screen and (max-width: $mobile-width) {
    font-size: 14px;
    line-height: 24px;
    margin-top: 32px;
  }
}

.team-card-title {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 24px;
  line-height: 32px;
  color: #0B0D21;
  margin-bottom: 8px;

  @media screen and (max-width: $mobile-width) {
    font-size: 18px;
    line-height: 24px;
    margin-bottom: 0;
  }
}

.team-card-career {
  margin-top: 40px;

  @media screen and (max-width: $mobile-width) {
    margin-top: 32px;
  }
}

.team-card-education {
  margin-top: auto;
}

.team-card-education-bottom {
  @media screen and (max-width: $mobile-width) {
    margin-bottom: 21px;
  }
}

.team-card-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 26px;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 14px;
    line-height: 18px;
  }

  ul {
    list-style-type: square;
    padding-left: 15px;

    @media screen and (max-width: $mobile-width) {
      margin-top: 16px;
      margin-bottom: 32px;
    }
  }

  li {
    @media screen and (max-width: $mobile-width) {
      margin-bottom: 10px;
    }
  }

  li::marker {
    color: #F9D023;
  }
}

.social-icons-container {
  position: absolute;
  bottom: 46.5px;
  right: 42px;
  display: flex;
  flex-direction: row;
  gap: 22px;
  width: fit-content;
  align-items: center;
  justify-content: center;

  @media screen and (max-width: $mobile-width) {
    bottom: 27px;
    right: 25.5px;
    gap: 28.5px;
  }
}