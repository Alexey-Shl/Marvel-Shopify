.page-title {
  margin-top: 0;
}

.marvel-page-title {
  margin-bottom: 3rem;
}

@media screen and (min-width: 750px) {
  .marvel-page-title {
    margin-bottom: 4rem;
  }
}

.page-placeholder-wrapper {
  display: flex;
  justify-content: center;
}

.page-placeholder {
  width: 52.5rem;
  height: 52.5rem;
}

.hero-gradient {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-direction: column;
  background: linear-gradient(0deg, #000000 4.66%, rgba(0, 0, 0, 0) 76.78%);
}

.hero-title {
  color: #FFFFFF;
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 115px;
  line-height: 130px;
  text-align: center;

  @media screen and (max-width: 320.98px) {
    font-size: 50px;
    line-height: 60px;
    width: unset;
    margin: 0 12px;
  }
}

.hero-description {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 25px;
  line-height: 35px;
  color: #FFFFFF;
  margin-top: 40px;
  width: 1111px;
  text-align: center;

  @media screen and (max-width: 320.98px) {
    font-size: 14px;
    line-height: 20px;
    margin-top: 16px;
    width: unset;
    margin: 16px 12px 0;
  }
}

.hero-contact-button {
  width: 196px;
  min-height: 48px;
  background: #F9D023;
  text-transform: uppercase;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 4px;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 14px;
  letter-spacing: 0.6px;
  color: #0B0D21;
  margin-top: 80px;
  text-decoration: none;

  @media screen and (max-width: 320.98px) {
    margin-top: 48px;
    margin-bottom: 56px;
  }
}

.hero-line {
  display: block !important;
  width: 1px;
  height: 101px;
  background: #F9D023;
  transform: matrix(-1, 0, 0, 1, 0, 0);
  margin-top: 104px;
  margin-bottom: 22px;

  @media screen and (max-width: 320.98px) {
    display: none !important;
  }
}

.hero-scroll-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 18px;
  color: #FFFFFF;
  padding-bottom: 54px;

  @media screen and (max-width: 320.98px) {
    display: none;
  }
}