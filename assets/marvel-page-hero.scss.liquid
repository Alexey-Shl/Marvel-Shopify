$mobile-width: 576.98px;

.hero-gradient {
  width: 100%;
  height: 1080px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-direction: column;
  background: linear-gradient(0deg, #000000 4.66%, rgba(0, 0, 0, 0) 76.78%);

  @media screen and (max-width: 1024.98px) {
    height: 910px;
  }

  @media screen and (max-width: $mobile-width) {
    height: 509px;
  }
}

.hero-title {
  color: #FFFFFF;
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 115px;
  line-height: 130px;
  text-align: center;

  @media screen and (max-width: 1350.98px) {
    width: 750px;
  }

  @media screen and (max-width: 1024.98px) {
    width: 540px;
    font-size: 87px;
    line-height: 110px;
  }

  @media screen and (max-width: $mobile-width) {
    font-size: 50px;
    line-height: 60px;
    width: 470px;
    margin: 0 12px;
  }

  @media screen and (max-width: 520.98px) {
    width: unset;
  }
}

.hero-description {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 25px;
  line-height: 35px;
  color: #FFFFFF;
  margin-top: 40px;
  width: 1111px;
  text-align: center;

  @media screen and (max-width: 1350.98px) {
    width: 750px;
  }

  @media screen and (max-width: 1024.98px) {
    width: 540px;
    line-height: 40px;
  }

  @media screen and (max-width: $mobile-width) {
    font-size: 14px;
    line-height: 20px;
    margin-top: 50px;
    width: 470px;
    margin: 16px 12px 0;
  }

  @media screen and (max-width: 520.98px) {
    width: unset;
  }

  @media screen and (max-width: 490.98px) {
    margin-top: 16px;
  }
}

.hero-contact-button {
  width: 196px;
  min-height: 48px;
  background: #F9D023;
  text-transform: uppercase;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 4px;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 14px;
  letter-spacing: 0.6px;
  color: #0B0D21;
  margin-top: 80px;
  text-decoration: none;

  @media screen and (max-width: $mobile-width) {
    margin-top: 88px;
    margin-bottom: 56px;
  }

  @media screen and (max-width: 490.98px) {
    margin-top: 48px;
  }
}

.hero-line {
  display: block !important;
  width: 1px;
  height: 101px;
  transform: matrix(-1, 0, 0, 1, 0, 0);
  margin-top: 104px;
  margin-bottom: 22px;
  position: relative;

  @media screen and (max-width: 1024.98px) {
    display: none !important;
  }
}

.hero-line-fill {
  display: block !important;
  width: 1px;
  position: absolute;
  background: #F9D023;
  top: 0;
  left: 0;
  animation: 2s scroll-for-more infinite ease-in-out;

  @media screen and (max-width: 1024.98px) {
    display: none !important;
  }
}

@keyframes scroll-for-more {
  0% {
    height: 0%;
  }
  25% {
    height: 0%;
  }
  30% {
    height: 100%;
  }
  60% {
    height: 100%;
    top: unset;
    bottom: 0;
  }
  65% {
    height: 0%;
    top: unset;
    bottom: 0;
  }
  100% {
    height: 0%;
    top: unset;
    bottom: 0;
  }
}

.hero-scroll-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 18px;
  color: #FFFFFF;
  padding-bottom: 54px;

  @media screen and (max-width: 1024.98px) {
    margin-top: 35px;
    padding-bottom: 35px;
  }

  @media screen and (max-width: $mobile-width) {
    display: none;
  }
}