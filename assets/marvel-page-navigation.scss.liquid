$mobile-width: 576.98px;

.marvel-nav-container {
  position: fixed;
  top: 0;
  width: 100%;
  height: 121px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  z-index: 99999999;
}

.marvel-nav-container-fill {
  background-color: #FFFFFF !important;
}

.marvel-nav-links-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 72px;

  li {
    display: block;
  }

  a {
    text-decoration: none;
    font-family: 'Sofia Pro';
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 25px;
    color: #0B0D21;
  }

  a:hover {
    color: #F9D023;
  }
}


