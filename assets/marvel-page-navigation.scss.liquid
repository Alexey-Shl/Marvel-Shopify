$mobile-width: 576.98px;
$tablet-width: 768.98px;

.marvel-nav-container {
  position: fixed;
  top: 0;
  width: 100%;
  height: 121px;
  z-index: 99999999;
  display: flex;
  justify-content: center;
  align-items: center;

  @media screen and (max-width: $mobile-width) {
    height: 70px;
  }
}

.marvel-nav-container-fill {
  background-color: #FFFFFF !important;
}

.marvel-nav-container-fill-dark {
  background-color: #000000 !important;
}

.marvel-nav-content-container {
  width: 1110px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  @media screen and (max-width: 1350.98px) {
    width: 100%;
    padding-left: 50px;
    padding-right: 50px;
  }

  @media screen and (max-width: $mobile-width) {
    padding-left: 15px;
    padding-right: 15px;
    width: 100%;
  }
}

.marvel-nav-links-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 72px;
  padding: 0;

  @media screen and (max-width: 900.98px) {
    gap: 40px;
  }
  
  @media screen and (max-width: $tablet-width) {
    display: none;
  }

  li {
    display: block;
  }

  a {
    text-decoration: none;
    font-family: 'Sofia Pro';
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 25px;
    color: #0B0D21;
  }

  a:hover {
    color: #F9D023;
  }
}

.marvel-nav-active-element {
  color: #F9D023 !important;
}

.marvel-nav-show-element {
  display: flex !important;
}

.marvel-nav-expanded-menu {
  display: none;
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 121px;
  z-index: 99999;
  background-color: #FFFFFF;
  flex-direction: column;
  align-items: center;
  padding-left: 65px;
  padding-right: 65px;
  overflow-y: auto;
  padding-bottom: 106px;

  @media screen and (max-width: $mobile-width) {
    top: 70px;
    padding-bottom: 56px;
  }
}

.marvel-nav-menu-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24px;
  padding: 0;
  margin-top: 48px;
  margin-bottom: 88px;

  li {
    display: block;
  }

  a {
    text-decoration: none;
    font-family: 'Alata';
    font-style: normal;
    font-weight: 400;
    font-size: 40px;
    line-height: 48px;
    color: #000000;
  }
}

.marvel-nav-contact-button {
  width: 192px;
  min-height: 48px;
  background: #F9D023;
  text-transform: uppercase;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 4px;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 14px;
  letter-spacing: 0.6px;
  color: #0B0D21;
  text-decoration: none;
  margin-bottom: 56px;
}
