$mobile-width: 320.98px;

.service-background {
  width: 100%;
  background-color: #F9D023;
}

.service-container {
  width: 1110px;
  padding-top: 96px;
  padding-bottom: 96px;
  margin-left: auto;
  margin-right: auto;

  @media screen and (max-width: $mobile-width) {
    padding-left: 15px;
    padding-right: 15px;
    width: 100%;
    padding-top: 56px;
    padding-bottom: 56px;
  }
}

.service-title {
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 90px;
  line-height: 100px;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 40px;
    line-height: 48px;
  }
}

.service-separator-stripe {
  display: block !important;
  height: 6px;
  width: 100px;
  background: #FFFFFF;
  margin-top: 48px;
  margin-bottom: 56px;

  @media screen and (max-width: $mobile-width) {
    height: 4px;
    width: 65px;
    margin-top: 32px;
    margin-bottom: 40px;
  }
}

.service-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 26px;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 14px;
    line-height: 24px;
  }
}

.service-points-container {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  gap: 30px;
  margin-top: 56px;
  margin-bottom: 56px;

  @media screen and (max-width: $mobile-width) {
    flex-direction: column;
    gap: 40px;
  }
}

.service-point {
  width: 351px;

  @media screen and (max-width: $mobile-width) {
    width: 100%;
  }
}

.service-point-header {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 40px;
  line-height: 48px;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    font-size: 22px;
    line-height: 28px;
  }
}

.service-point-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 40px;
  color: #0B0D21;
  margin-top: 8px;

  @media screen and (max-width: $mobile-width) {
    font-size: 14px;
    line-height: 24px;
    margin-top: 16px;
  }

  ul {
    list-style-type: square;
    padding-left: 15px;
  }

  li::marker {
    color: #FFFFFF;
  }
}