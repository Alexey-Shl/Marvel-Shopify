$mobile-width: 576.98px;

.footer-container {
  width: 1110px;
  padding-top: 96px;
  padding-bottom: 96px;
  margin-left: auto;
  margin-right: auto;

  @media screen and (max-width: 1350.98px) {
    width: 100%;
    padding-left: 50px;
    padding-right: 50px;
  }

  @media screen and (max-width: $mobile-width) {
    padding-left: 15px;
    padding-right: 15px;
    width: 100%;
    padding-top: 56px;
    padding-bottom: 56px;
  }
}

.footer-container-background {
  width: 100%;
  height: fit-content;
  background: #000000;
}

.footer-title {
  font-family: 'Alata';
  font-style: normal;
  font-weight: 400;
  font-size: 90px;
  line-height: 100px;
  color: #FFFFFF;

  @media screen and (max-width: $mobile-width) {
    font-size: 40px;
    line-height: 48px;
  }
}

.footer-text {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 40px;
  line-height: 48px;
  color: #FFFFFF;

  @media screen and (max-width: $mobile-width) {
    font-size: 22px;
    line-height: 28px;
  }
}

.footer-link {
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 40px;
  line-height: 48px;
  color: #F9D023;
  text-underline-offset: 5px;
  text-decoration: underline;

  @media screen and (max-width: 1350.98px) {
    overflow-wrap: break-word;
  }

  @media screen and (max-width: $mobile-width) {
    font-size: 22px;
    line-height: 28px;
  }
}

.footer-separator-stripe {
  display: block !important;
  height: 6px;
  width: 100px;
  background: #F9D023;
  margin-top: 48px;
  margin-bottom: 56px;

  @media screen and (max-width: $mobile-width) {
    height: 4px;
    width: 65px;
    margin-top: 32px;
    margin-bottom: 40px;
  }
}

.footer-content-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 111px;

  @media screen and (max-width: 1350.98px) {
    flex-direction: column;
  }

  @media screen and (max-width: $mobile-width) {
    flex-direction: column;
    gap: 56px;
  }
}

.footer-content-container-right {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.footer-right-input-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 40px;
  align-items: flex-end;
  gap: 16px;

  @media screen and (max-width: $mobile-width) {
    gap: 8px;
    margin-top: 32px;
  }
}

.footer-right-input {
  padding: 14px 20px;
  width: 100%;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 700;
  font-size: 14px;
  line-height: 20px;
  letter-spacing: 0.6px;
  color: #0B0D21;
}

.footer-right-input::placeholder {
  color: #0B0D21;
}

.footer-right-submit-button {
  width: 272px;
  height: 48px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 4px;
  background: #F9D023;
  border: none;
  font-family: 'Sofia Pro';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 14px;
  letter-spacing: 0.6px;
  color: #0B0D21;

  @media screen and (max-width: $mobile-width) {
    width: 196px;
  }
}